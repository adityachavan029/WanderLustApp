<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Enter username</label>
                <input type="text" name="username" placeholder="Enter username" required class="form-control">
                <div class="valid-feedback">username looks good!</div>
                <div class="invalid-feedback">Please enter a username!</div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Enter email</label>
                <input type="text" name="email" placeholder="Enter email" required class="form-control">
                <div class="valid-feedback">email looks good!</div>
                <div class="invalid-feedback">Please enter a email!</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Enter password</label>
                <input type="password" name="password" placeholder="Enter password" required class="form-control">
                <div class="valid-feedback">password looks good!</div>
                <div class="invalid-feedback">Please enter a password!</div>
              </div>
              <button  class="btn btn-success">Signup</button>
        </form>
    </div>
</div>