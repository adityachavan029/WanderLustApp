<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Enter username</label>
                <input type="text" name="username" placeholder="Enter username" required class="form-control" required>
                <div class="invalid-feedback">Please enter a username!</div>
              </div>
             
              <div class="mb-3">
                <label for="password" class="form-label">Enter password</label>
                <input type="password" name="password" placeholder="Enter password" required class="form-control" required>
                <div class="invalid-feedback">Please enter a password!</div>
              </div>
              <button  class="btn btn-success">Login</button>
        </form>
    </div>
</div>